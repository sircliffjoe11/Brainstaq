<header class="section-header mb-5" style="padding-top: 150px;">
  <h3>Search <span class="text-primary">Results</span></h3>
</header>

<section class="container-fluid" style="margin-bottom: 20px;">
  <div class="row">
    <div class="container">
      <div class="col-lg-12">
        <div class="col-md-10 table-responsive" style=" margin-bottom: 1rem;">
          <table class="table table-hover", style="border-bottom: 1px solid #f2f2f2;">
            <tbody>
              <% c = 0 %>
              <% @ideas.each do |idea| %>
                <tr>              
                  <td>
                    <% if idea.image.present? %>
                      <a href="<%= idea_url(idea) %>">
                        <%= image_tag idea.image_url(:thumb), style: "width: 150px;" %>
                    <% else %>
                      No image
                      </a>
                    <% end %>
                  </td>
              
                  <td class="idea_titlez">
                    <%= link_to idea.title, idea, class: 'text-dark', style: "font-weight: bold;" %>
                  </td>
                  <td class="idea_descriptionz">
                    <a class="text-dark" href="<%= idea_url(idea) %>">
                      <%= truncate(sanitize(idea.description, tags: []), length: 100) %>
                    </a>
                  </td>
                  <td class="view_morez">
                    <%= link_to 'View More', idea %>
                  </td>
                </tr>
                <% c = c + 1 %>
              <% end %>
              <h6 class="text-primary">There are <%= c %> ideas containing your search!</h6>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @media only screen and (max-width: 760px),
(min-device-width: 768px) and (max-device-width: 1024px)  {

	table, thead, tbody, th, td, tr { 
		display: block; 
	}
	
	thead tr { 
		position: absolute;
		top: -9999px;
		left: -9999px;
	}
	
	td { 
		border: none;
		border-bottom: 1px solid #eee; 
		position: relative;
		padding-left: 50%; 
	}
	
}


</style>