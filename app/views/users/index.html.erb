<main style="padding-top: 100px; background-color: #f2f2f2;">
  <div class="main-section">
    <div class="container">
      <div class="main-section-data">
        <div class="row">
          <div class="col-lg-3 col-md-4 pd-left-none no-pd">
                    
          <%= render partial: 'layouts/follow', locals: { users: @users} %>

	         <div class="col-lg-6 col-md-8 no-pd">
			      <div class="main-ws-sec">
              <div class="post-topbar">
				        <div class="user-picy">
                  <% if current_user.image_url %>
                    <%= image_tag current_user.image_url, class: 'rounded-circle mt-1', style:"width:40px; height: 40px; margin-right: 0px;" %>
                  <% else %>
                    <%= image_tag 'avatar.png', class: 'rounded-circle mt-1', style:"width:32px; height: 32px; margin-right: 0px;" %>
                  <% end %>
                </div>
                
				        <div class="post-st">
				          <ul>
                    <%= link_to fa_icon("edit", title: "New Idea", class: "text-primary mr-2 ml-2", style: "font-size: 24px;"), new_idea_path %>
				          </ul>
			          </div>
              </div>
              
              <% @ideas.each do |idea|  %>
              <div class="posts-section">
                <div class="post-bar">
                  <div class="post_topbar">
                    <div class="usy-dt">
                      
                      <% if idea.user.image_url %>
                        <%= image_tag idea.user.image_url, style: "width: 40px; height: 40px;", class: "rounded-circle ml-1" %>
                      <% else %>
                        <%= image_tag 'avatar.png', style: "width: 40px; height: 40px;", class: "rounded-circle ml-1" %>
                      <% end %>
                      
                      <div class="usy-name">
                        <h3><%= link_to idea.user.full_name, profile_path(idea.user.username), class: 'text-dark' %></h3>
                        <span> Created on <%= local_time(idea.created_at) %></span>
                      </div>
                    </div>
                    
                    <% if user_signed_in? && current_user.id == idea.user_id %>
                      <div class="dropdown ml-1 float-right" style="font-size: 20px;">
                        <a class="dropdown-toggle fas fa-ellipsis-v" href="#" role="button" id="dropdownMenuLink" 
                          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        </a>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="font-size: 12px;">
                          <% if idea.end_date.future? %>
                            <%= link_to "Edit Idea", edit_idea_path(idea), class: "dropdown-item" %>
                          <% end %>
                          <%= link_to "Delete", idea, :method => 'delete', data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                        </div>
                      </div>
                    <% end %>
                
                  </div>
                  <div class="epi-sec">
                    <ul class="descp" style="font-size: 12px;">
                      <li><i class="fas fa-map-marker-alt"></i>  <%= idea.user.country %></li>
                      <li><i class="fas fa-list-alt"></i>  
                        <% if idea.category %>
                          <%= idea.category.name %>
                      <% else %>
                      <%= 'General' %>
                      <% end %></li>
                    </ul>
                  </div>
                  <div class="job_descp">
                    <h3><%= link_to idea.title, idea, class: 'text-dark' %></h3>
                    <% if idea.relevance_bar.to_i > 75 && !idea.end_date.future? || idea.relevance_bar.to_i < 75 && !idea.end_date.future? %>
                      <span class="float-right text-danger mb-2" style="font-weight: bold; font-size: 12px;">Campaign Expired! <br>
                        <small style="font-size: 9px;">N<%= idea.donated_amount %> raised of 
                          <%= number_to_currency(idea.donation_goal, :unit => "N") %> <br>
                          <!-- | Exp: <%#= idea.end_date %> -->
                        </small>
                      </span>
                    <% elsif idea.relevance_bar.to_i < 75 %>
                      <span class="float-right text-danger mb-2" style="font-weight: bold; font-size: 12px;">Inactive Campaign <br>
                        <small style="font-size: 9px;">N<%= idea.donated_amount %> raised of 
                          <%= number_to_currency(idea.donation_goal, :unit => "N") %> <br>
                          <!-- | Exp: <%#= idea.end_date %> -->
                        </small>
                      </span>
                    <% elsif idea.relevance_bar.to_i > 75 %>
                      <span class="float-right text-success mb-2" style="font-weight: bold; font-size: 12px;">Active Campaign <br>
                        <small style="font-size: 9px;">N<%= idea.donated_amount %> raised of 
                          <%= number_to_currency(idea.donation_goal, :unit => "N") %> <br>
                          <!-- | Exp: <%#= idea.end_date %> -->
                        </small>
                      </span>
                    <% end %>
                    <%= image_tag idea.image_url, style: "height: 150px; object-fit: cover;", class: "card-img-top" %> 
                      <p class="mt-3 mb-0" style="font-size: 14px;"><%= truncate(sanitize(idea.description, tags: []), length: 200) %></p>
                  </div>
                  
                  <div class="job-status-bar mt-1" style="margin-bottom: -15px;">
                    <ul class="like-com">
                      <li style="font-size: 12px;" href="#"><i class="fa fa-eye"></i> <%= pluralize(idea.impressionist_count, 'View') %></li> 
                        
                      <% if user_signed_in? %>
                        <% if current_user.liked? idea %>
                          <%= link_to unlike_idea_path(idea), method: :put, class: "unlike_idea" do %>
                            <li><i class="fa fa-heart text-primary vote_count"></i> <%= idea.get_likes.size %></li>
                          <% end %>
                          <% else %>
                          <%= link_to like_idea_path(idea), method: :put, class: "like_idea" do %>
                            <li class="mb-1" style="font-size: 12px;"><i class="fa fa-heart vote_count"></i> <%= idea.get_likes.size %></li>
                          <% end %>
                        <% end %>
                        <% else %>
                          <%= link_to like_idea_path(idea), method: :put, class: "like_idea" do %>
                            <li class="mb-1" style="font-size: 12px;"><i class="fa fa-heart vote_count"></i> <%= idea.get_likes.size %></li>
                          <% end %>
                      <% end %>

                        <li style="font-size: 12px;"><i class="fa fa-comments"></i>  <%= pluralize(idea.comments.size, 'Comment') %></li> 
                        </ul>
                      <a style="font-size: 12px;"><i class="fa fa-filter"></i> Relevance: <strong><%= "#{idea.relevance_bar.to_i}%" %></strong></a>                  
                  </div>
                </div><!--post-bar end-->
              </div><!--posts-section end-->
            <% end %>
          </div><!--main-ws-sec end-->
          </div>
          
            <div class="col-sm-3 pd-right-none no-pd">
		    	    <div class="right-sidebar">
				        <div class="user-data full-width"  style="width: 280px;">
				          <div class="user-profile">
					          <div class="username-dt">
					            <div class="usr-pic rounded-circle">
                        <% if current_user.image_url %>
                          <%= image_tag current_user.image_url, style: "width: 100%; height: 100%;", class: "rounded-circle" %>
                          <% else %>
                          <%= image_tag 'avatar.png', style: "width: 100%; height: 100%;", class: "rounded-circle" %>
                          <% end %>
					            </div>
					          </div><!--username-dt end-->
												  
					          <div class="user-specs">
					            <h3 class="mb-0"><%= current_user.full_name %></h3>
                      <h6 class="p-4 text-muted" style="font-size: 12px; margin-top: -10px; margin-bottom: -30px;"><%= current_user.bio %></h6>
                      <!-- <div class="social-links" style="margin-bottom: -20px;">
                        <a href="#"><i class="fab fa-twitter m-2"></i></a>
                        <a href="#"><i class="fab fa-facebook m-2"></i></a>
                        <a href="#"><i class="fab fa-instagram m-2"></i></a>
                        <a href="#"><i class="fab fa-linkedin m-2"></i></a>
                      </div> -->
					          </div>
                  </div><!--user-profile end-->
				 
				          <ul class="user-fw-status" style="margin-bottom: 0px;">
					          <li>
					             <%= link_to 'View Profile', profile_path(current_user.username) %>
					          </li>
				          </ul>
				        </div><!--user-data end-->
			        
                <%= render partial: "layouts/trending", locals: { ideas: @ideas} %>
	              
							</div><!--widget-jobs end-->
	          </div><!--right-sidebar end-->
	        </div>
	      </div>
	    </div><!-- main-section-data end-->
	  </div> 
  </div>    
</main>
