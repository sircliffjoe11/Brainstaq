<% ideas.in_groups_of(3) do |group| %>
          <div class="site-section ideas-entry-wrap" style="margin-top: 0px; ">
            <div class="container">
              <div class="row">
                <% group.compact.each do |idea| %>
                  <div class="col-md-4">
                    <div class="idea card">
                      <figure class="m-0 card-img-top">
                        <%= image_tag idea.image_url, width:'100%', height:'230px' if idea.image.present?  %>
                      </figure>
                      <div class="idea-inner-text py-4 px-4">
                        <span class="idea-category">
                          <% if idea.category %>
                          <%= idea.category.name %>
                          <% else %>
                          <%= 'General' %>
                          <% end %>
                        </span>
                        <div class="meta"><span class="fas fa-map-marker-alt mr-2 ml-0"></span><%= idea.user.country %></div>
                          <h3 class="mb-2"><%= link_to idea.title, idea, class: 'text-dark', style: "font-weight: bold;" %></h1>
                          
                            <div class="progress mt-0" style="height: 10px; width: 100%;">
                              <div class="progress-bar" role="progressbar" style="width: <%= "#{idea.impressions.size + idea.get_likes.size + idea.comments.size}%" %>" aria-valuenow="<%= idea.impressions.size %>" 
                                aria-valuemin="0" aria-valuemax="100">
                                <small><%= "#{idea.impressions.size + idea.get_likes.size + idea.comments.size}%" %></small>      
                              </div>
                            </div>
 
                          <p class="mb-0 mt-3" style="font-size: 12px;">
                            <%= truncate(sanitize(idea.description, tags: []), length: 180) %>
                          </p>
                          <% if "#{idea.impressions.size + idea.get_likes.size + idea.comments.size}".to_i > 75 %>
                            <div class="mt-3" style="margin-bottom: -30px;">
                              <p class="text-primary" style="font-weight: bold;">Active Campaign <br>
                                <small>N235,000 raised</small>
                              </p>
                            </div>
                          <% end %>
                        </div>

                        <div class="d-flex border-top mt-0 stats" style="font-size: 12px;">
                          <div class="py-3 px-4 w-30">
                            <span class="fa fa-comments"></span> <%= pluralize(idea.comments.size, 'Comment') %>
                          </div>
                          <div class="py-3 px-4 w-20 ml-auto border-left">
                            <span class="fa fa-eye"></span> <%= pluralize(idea.impressionist_count, 'View') %>
                          </div>
                          <div class="py-3 px-3 w-20 ml-auto border-left">
                            <span class="fa fa-heart"></span> <%= pluralize(idea.get_likes.size, 'Likes') %>
                          </div>
                        </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>