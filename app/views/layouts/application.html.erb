<!DOCTYPE html>
<html>
  <head>
    <title>Brainstaq | <%= yield (:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <style type="text/css">
      BODY {overflow-x: hidden}
    </style>

    <meta name="viewport" content="width=device-width, initial-scale = 1, maximum-scale=3.0, minimum-scale=0.86, user-scalable=no">

    <%= tinymce_assets %>
    <script type="text/javascript" src="/assets/tinymce.js"></script>

    <%= favicon_link_tag asset_path('favicon.ico') %>
    
    <%# if cookies[:moon] %>
      <%#= stylesheet_link_tag 'application_dark', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# else %>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# end %>
    
    <%= stylesheet_link_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/le-frog/jquery-ui.min.css' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%#= yield :recaptcha_js %>
  </head>

  <body>

  <% if user_signed_in? %>
    <%= render partial: "layouts/user_header" %>
  <% else %>
    <%= render partial: "layouts/header" %>
  <% end %>
  <%= render partial: "layouts/flash" %>
  <%= yield %>
    <%= intro_tags %>
    <%= render partial: "layouts/footer" %>
  </body>
</html>